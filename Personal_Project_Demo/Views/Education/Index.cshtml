@using Personal_Project_Demo.Models
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationID</td>
            <td>@item.EducationTitle</td>
            <td>@item.EducationDate</td>
            <td>@item.EducationDescription</td>
            <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">Eğitim Sil</a></td>
            <td><a href="/Education/EditEducation/@item.EducationID" class="btn btn-success">Eğitim Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Education/AddEducation/" class="btn btn-primary">Yeni Eğitim Ekle</a>