@model Personal_Project_Demo.Models.TblFeature
@{
    ViewBag.Title = "AddFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Özellik Ekleme Sayfası</h2>

<form method="post">
    <label>Özellik Başlığı</label>
    @Html.TextBoxFor(x => x.FeatureTitle, new { @class = "form-control" })
    <br /> <label>Özellik Logosu</label>
    @Html.TextBoxFor(x => x.FeatureLogo, new { @class = "form-control" })
    <br /><label>Özellik Açıklaması</label>
    @Html.TextBoxFor(x => x.FeatureDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Özellik Ekle</button>
    <br />

</form>